@inject Microsoft.Extensions.Options.IOptionsSnapshot<Derdeyn.GraduaatIconizer.Web.Models.IconizrSettings> settings
@{
    ViewData["Title"] = "Home Page";
}
<h1 class="cover-heading d-none d-sm-block">@settings.Value.AppName</h1>
<p class="lead d-none d-sm-block">Maak icoontjes voor je Github classrooms, met een vleugje Howest.</p>
<div class="container mt-5">
    <div class="row">
        <div class="col-sm-6">
            <form id="iconizeform">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="type">Organizatie type</label>
                            <select class="form-control" id="type" name="type">
                                <option value="classroom">Classroom</option>
                                <option value="root">Opleiding</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="top">Tekst boven</label>
                            <input type="text" class="form-control" id="top" name="top" maxlength="@(settings.Value.MaxLength)" placeholder="@settings.Value.PlacerholderTop" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="bottom">Tekst onder</label>
                            <input type="text" class="form-control" id="bottom" name="bottom" maxlength="@(settings.Value.MaxLength)" placeholder="@settings.Value.PlacerholderBottom" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <button type="submit" id="generate" class="btn btn-secundary w-100">Genereer icoon</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-sm-6 p-3 text-center">
            <img id="loading" class="generating" style="display:none;" src="~/assets/loading.svg" width="200" height="200" alt="base image" />
            <img id="result" class="result" style="display:none;" width="200" height="200" alt="result" />
            <div id="placeholder"></div>
        </div>
    </div>
</div>
<div class="text-left">

</div>